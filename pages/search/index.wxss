page {
  background-color: #f5f7f9;
}
view .search {
  display: flex;
  height: 120rpx;
  color: #fff;
}
view .search .search_input {
  flex: 1;
  box-sizing: border-box;
  border: 1rpx solid #ccc;
  border-radius: 55rpx;
  position: relative;
  background-color: white;
  display: flex;
  align-items: center;
  padding-left: 15rpx;
  height: 90rpx;
  color: #e33e33;

}
.inputPlace{
  color: #e33e33;
  font-size: 40rpx;
  font-weight: 500;
}
view .search .search_btn {
  position: absolute;
  height: 91rpx;
  right: -3rpx;
}
view .search .search_btn button {
  height: 90rpx;
  display: flex;
  align-items: center;
  border: 1rpx solid #ccc;
}
view .main .main_item {
  display: flex;
  height: 250rpx;
  padding: 10rpx 20rpx;
  background-color: #fff;
  margin:6rpx 0;
}
view .main .main_item .item_image {
  width: 25%;
}
view .main .main_item .item_image image {
  width: 100%;
  height: 100%;
}
view .main .main_item .item_text {
  flex: 1;
  display: flex;
  font-size: 30rpx;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  padding-left: 30rpx;
}
.cancel-class{
  background-color: #19B5FE;
  color:red!important;
}
.actBottom{
  width: 94%;
  margin-left: 3%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.line{
  height: 2rpx;
  width: 100%;
  background-color: "#F5F5F5";
}
.actBottom text{
  margin-top: 20rpx;
  color:"#F5F5F5";
  font-size: 26rpx;
}
.cancel{
  color: rgb(37, 37, 197);
  color:#fff;
}
.rootClass{
  position: fixed;
  top: 0;
  left: 0;
  box-shadow: 0px 2px 10px 1px rgba(0,0,0,0.4);
  z-index: 100;
  width: 100%;

}
